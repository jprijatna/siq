<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Product Info">
		<content>
			<Carousel class="sapUiContentPadding" loop="true">
				<pages>
					<VBox justifyContent="Center" alignItems="Center">
						<Image src="images/S8.png" alt="Example picture of speakers"/>
						<Text text="Price: $638"/>
					</VBox>
					<VBox justifyContent="Center" alignItems="Center">
						<Image src="images/i8.png" alt="Example picture of USB flash drive"/>	
						<Text text="Price: $600"/>
					</VBox>
					<VBox justifyContent="Center" alignItems="Center">
						<Image src="images/Pixel.jpg" alt="Example picture of spotlight"/>	
						<Text text="Price: $600"/>
					</VBox>
<!--					<VBox>
						<Image src="{img>/products/screw}" alt="Example picture of screw"/>	
					</VBox>-->
				</pages>
			</Carousel>
		</content>
		<buttons>
			<Button text="Close" press="onClickCloseProductInfo"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>